<Window x:Class="Smart_Fitness_WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Fitness_WPF"
        mc:Ignorable="d"
        Title="Профиль" Height="450" Width="800" Icon="/Fitness_icon.ico">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/sportSTR.jpg"/>
        </Grid.Background>
        <Button Content="Личый кабинет" HorizontalAlignment="Left" Margin="25,24,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold" Click="Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Schedule" Content="Расписание" HorizontalAlignment="Left" Margin="25,89,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold" Click="Schedule_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Registration" Content="Мои записи" HorizontalAlignment="Left" Margin="25,159,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold" Click="Registration_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Payment" Content="Оплата услуг" HorizontalAlignment="Left" Margin="25,229,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold" Click="Payment_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Обратная связь" HorizontalAlignment="Left" Margin="25,294,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Информация" HorizontalAlignment="Left" Margin="25,364,0,0" VerticalAlignment="Top" Height="40" Width="125" FontSize="16" FontWeight="Bold" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E0A28" Offset="0.105"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox x:Name="ProjectInfoListBox" Width="450" Height="300" HorizontalAlignment="Center" VerticalAlignment="Bottom" Visibility="Collapsed">
            <ListBoxItem>
                <TextBlock>
                    Проект: Смарт - Фитнес
                    <LineBreak/>
                    Подготовили: Студенты группы БВ-318
                    <LineBreak/>
                    Агашков Лев
                    <LineBreak/>
                    Дерипаско Маргарита
                    <LineBreak/>
                    Васильев Игорь
                    <LineBreak/>
                    Журавлёва Наталья
                    <LineBreak/>
                    Егоров Евгений
                    <LineBreak/>
                    Соколов Сергей
                    <LineBreak/>
                    Чумаченко Павел
                    <LineBreak/>
                    Кривошейн Всеволод
                </TextBlock>
            </ListBoxItem>
        </ListBox>

    </Grid>
</Window>
