<Window x:Class="Smart_Fitness_WPF.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Fitness_WPF"
        mc:Ignorable="d"
        Title="Window6" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Имя пользователя:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="UserNameTextBox" Margin="150,10,10,0" VerticalAlignment="Top" Width="200" IsReadOnly="True"/>

        <CheckBox x:Name="SubscriptionCheckBox" Content="Абонемент на 10 занятий с 10% скидкой" Margin="10,50,0,0" VerticalAlignment="Top" Checked="SubscriptionCheckBox_Checked" Unchecked="SubscriptionCheckBox_Unchecked"/>

        <TextBlock Text="Финальная цена:" Margin="10,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock x:Name="FinalPriceTextBlock" Margin="150,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Назад" Width="100" Height="30" Margin="6,129,694,0" VerticalAlignment="Top" Click="BackButton_Click"/>
    </Grid>
</Window>