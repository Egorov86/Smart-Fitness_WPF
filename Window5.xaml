<Window x:Class="Smart_Fitness_WPF.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Fitness_WPF"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">
    <Grid Margin="0,0,0,9">
        <ListView x:Name="TrainingListView" SelectionMode="Single" Margin="0,0,0,35">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата и Время" DisplayMemberBinding="{Binding DateTime}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Удалить запись" Click="DeleteButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
